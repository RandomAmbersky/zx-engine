{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "sjasmplus_main",
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol main.asm;",
            "problemMatcher": "$errmatcher-sjasmplus"
        },
        {
            "type": "shell",
            "label": "sjasmplus_tape",
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol tape_loader.asm",
            "problemMatcher": "$errmatcher-sjasmplus"
        },
        {
            "type": "shell",
            "label": "unreal",
            "command": "open -a 'Unreal Speccy Portable' cell3326.sna",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "sjasmplus_main"
            ]
        },
        {
            "type": "shell",
            "label": "zx7",
            "command": "rm -f *.zx7; ./bin/zx7 static.bin; ./bin/zx7 dynamic.bin;",
            "dependsOn": [
                "sjasmplus_main"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "make_tape",
            "command": "./bin/sjasmplus try_arch.asm; ./bin/bin2tap -b -hp pack.bin -c 24575 -a 24576 -r 24576 ",
            "dependsOn": [
                "zx7"
            ],
            "problemMatcher": []
        }
    ]
}