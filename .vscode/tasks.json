        {
            "type": "shell",
            "label": "sjasmplus_parts", // делаем static.bin и dynamic.bin
            "osx": {
                "command": "${workspaceFolder}/engine/bin/osx/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--outprefix=${workspaceFolder}/output/",
                    "--lst=${workspaceFolder}/output/program.list",
                    "--fullpath",
                    "${workspaceFolder}/parts.asm"
                ],
            },
            "linux": {
                "command": "${workspaceFolder}/engine/bin/linux/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--outprefix=${workspaceFolder}/output/",
                    "--lst=${workspaceFolder}/output/program.list",
                    "--fullpath",
                    "${workspaceFolder}/parts.asm"
                ],
            },            
            "problemMatcher": "$errmatcher-sjasmplus",
            "dependsOn": [
                "make_tileset"
            ],
        },
        {
            "type": "shell",
            "label": "make_tileset",
            "command": "python3 ${workspaceFolder}/engine/bin/cross-platform/scr2spr.py --width 2 --height 2 --color True --count 191 -i ${workspaceFolder}/output/tiles.scr -o ${workspaceFolder}/output/tiles.bin",
            "dependsOn": [
                "make_scr"
            ],
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "make_scr",
            "command": "python3 ${workspaceFolder}/engine/bin/cross-platform/png2scr.py -i ${workspaceFolder}/data/tiles/tiles.png -o ${workspaceFolder}/output/tiles.scr",
            "problemMatcher": [],
            "dependsOn": [
                // "clean_dir"
            ],
        },
        {
            "type": "shell",
            "label": "clean_dir",
            "command": "mkfile ${workspaceFolder}/output/stpfile;rm ${workspaceFolder}/output/*",
            "problemMatcher": []
        },
