{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "sjasmplus_sna",
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol make_sna.asm",
            "problemMatcher": "$errmatcher-sjasmplus",
            "dependsOn": [
                "zx7"
            ],
        },
        {
            "type": "shell",
            "label": "sjasmplus_trd",
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol make_trd.asm",
            "problemMatcher": "$errmatcher-sjasmplus",
            "dependsOn": [
                "zx7"
            ],
        },
        {
            "type": "shell",
            "label": "run_sna",
            "command": "open -a 'Unreal Speccy Portable' cell3326.sna",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "sjasmplus_sna"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "sjasmplus_parts", // делаем static.bin и dynamic.bin
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol parts.asm",
            "problemMatcher": "$errmatcher-sjasmplus"
        },
        {
            "type": "shell",
            "label": "sjasmplus_one", // склеиваем все parts (static.bin и dynamic.bin) в один бинарь 
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol one.asm",
            "problemMatcher": "$errmatcher-sjasmplus",
            "dependsOn": [
                "sjasmplus_parts"
            ],
        },
        {
            "type": "shell",
            "label": "run_trd",
            "command": "open -a 'Unreal Speccy Portable' cell3326.trd --args -m 0 ",
            "dependsOn": [
                "sjasmplus_trd"
            ],
            "problemMatcher": []
        },
        // {
        //     "type": "shell",
        //     "label": "sjasmplus_tape",
        //     // "command": "./bin/sjasmplus --dos866 --nofakes --dirbol tape_loader.asm",
        //     "command": "./bin/sjasmplus --dos866 --nofakes --dirbol make_tape.asm",
        //     "problemMatcher": "$errmatcher-sjasmplus"
        // },
        {
            "type": "shell",
            "label": "zx7",
            "command": "rm -f *.zx7; ./bin/zx7 static.bin; ./bin/zx7 dynamic.bin;",
            "dependsOn": [
                "sjasmplus_parts"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "make_tape",
            "command": "./bin/bin2tap -b -hp game.bin -c 24575 -a 24576 -r 24576 ",
            "dependsOn": [
                "sjasmplus_one"
            ],
            "problemMatcher": []
        }
    ]
}