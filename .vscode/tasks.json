    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "run_sna",
            "command": "${workspaceFolder}/engine/bin/osx/xpeccy.app/Contents/MacOS/xpeccy ${workspaceFolder}/output/cell3326.sna",
            // "command": "open -a 'Fuse' ${workspaceFolder}/output/cell3326.sna",
            // "command": "open -a 'Unreal Speccy Portable' cell3326.sna",
            "dependsOn": [
                "make_sna"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "make_sna",
            "osx": {
                "command": "${workspaceFolder}/engine/bin/osx/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--sym=${workspaceFolder}/output/labelsequ.txt",
                    "--outprefix=${workspaceFolder}/output/",
                    "--lst=${workspaceFolder}/output/program.list",
                    "--fullpath",
                    "${workspaceFolder}/make_sna.asm"
                ],
            },
            "linux": {
                "command": "${workspaceFolder}/engine/bin/linux/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--sym=${workspaceFolder}/output/labelsequ.txt",
                    "--outprefix=${workspaceFolder}/output/",
                    "--lst=${workspaceFolder}/output/program.list",
                    "--fullpath",
                    "${workspaceFolder}/make_sna.asm"
                ],
            },
            "dependsOn": [
                "pack"
            ],
            "problemMatcher": "$errmatcher-sjasmplus",
        },
        // {
