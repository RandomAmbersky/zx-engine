{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "sjasmplus",
            "command": "./bin/sjasmplus --dos866 --nofakes --dirbol main.asm; ./bin/sjasmplus tape_loader.asm",
            "problemMatcher": "$errmatcher-sjasmplus"
            // --nofakes 
        },
        {
            "type": "shell",
            "label": "zx7",
            "command": "rm -f game.bin.zx7; ./bin/zx7 game.bin",
            "dependsOn": [
                "sjasmplus"
            ],
        },
        {
            "type": "shell",
            "label": "make_tape",
            "command": "./bin/sjasmplus try_arch.asm; ./bin/mctrd new \"cell3326.tap\"; ./bin/mctrd add -b -a 10 \"cell3326.bas\" \"cell3326.tap\"; ./bin/mctrd add \"game.bin\" \"cell3326.tap\"; ",
            "dependsOn": [
                "zx7"
            ],
        },
        {
            "type": "shell",
            "label": "unreal",
            "command": "open -a 'Unreal Speccy Portable' cell3326.sna",
            // "command": "open -a 'Fuse' -s myzx.sna",
            // "command": "open -a 'xpeccy' myzx.sna",
            "args": [
            ],
            "dependsOn": [
                "make_tape"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}